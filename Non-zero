#include <bits/stdc++.h>
using namespace std;
int main(){
    int n,a;
    cin>>n;
    while(n--){
        cin>>a;
        int m=0,d,sum=0;
        for(int i=0;i<a;i++){
           cin>>d;
           if(d==0){sum+=1;m++;}
           sum+=d;
        }
        if(sum==0){m++;}
        cout<<m<<endl;
    }
    return 0;
}
